@using DesignPattern.Mediator.MediatorPattern.Commands
@model CreateProductCommand

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="ProductName" /><br />

        <label>Stok Sayısı</label>
        <input type="text" class="form-control" asp-for="ProductStock" /><br />

        <label>Stok Türü</label>
        <input type="text" class="form-control" asp-for="ProductStockType" /><br />

        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="ProductPrice" /><br />

        <label>Kategori</label>
        <input type="text" class="form-control" asp-for="ProductCategory" /><br />

        <button class="btn btn-primary">Ürünü Ekle</button>
    </form>
    <a href="/Product/Index/" class="btn btn-primary">Geri Dön</a>
</div>