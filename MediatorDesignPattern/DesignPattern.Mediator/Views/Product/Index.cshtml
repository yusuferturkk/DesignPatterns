@using DesignPattern.Mediator.MediatorPattern.Results
@model List<GetAllProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Stok Sayısı</th>
            <th>Stok Türü</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductStockType</td>
                <td>@item.ProductCategory</td>
                <td><a href="/Product/DeleteProduct/@item.ProductId/" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId/" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Product/DetailProduct/@item.ProductId/" class="btn btn-dark">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct/" class="btn btn-primary">Ürün Ekle</a>
</div>