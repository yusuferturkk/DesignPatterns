@model DesignPattern.Facade.DAL.OrderDetail

@{
    ViewData["Title"] = "OrderDetailStart";
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<h1>Sipariş Detay Sayfası</h1>

<form method="post">
    <label>Müşteri ID</label>
    @Html.DropDownListFor(x => x.CustomerID, (List<SelectListItem>)ViewBag.customer, new {@class="form-control"})<br />

    <label>Ürün ID</label>
    @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.product, new {@class="form-control"})<br />

    <label>Sipariş ID</label>
    <input type="text" class="form-control" asp-for="OrderID" /><br />

    <label>Ürün Fiyatı</label>
    <input type="text" class="form-control" asp-for="ProductPrice" /><br />

    <label>Ürün Adet</label>
    <input type="text" class="form-control" asp-for="ProductCount" /><br />

    <button class="btn btn-warning">Sipariş Ver</button>
</form>